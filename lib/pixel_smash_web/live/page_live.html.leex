<div class="flex flex-wrap mb-4">
  <%= for battle <- @current_battles do %>
    <%= live_component @socket, BattleComponent, battle: battle %>
  <% end %>
</div>

<div class="flex flex-wrap mb-4">
  <%= for battle <- @upcoming_battles do %>
    <%= live_component @socket, BattleComponent, battle: battle %>
  <% end %>
</div>

<%= live_component @socket, StandingsComponent, gladiators: @gladiators %>
